<% if logged_in? %>

<h1><%= current_user.name %>のタスク詳細ページ</h1>

<table class="table table-bordered">
  
  <tr>
    <th>ステータス</th></th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to 'Delete', @task, method: :delete, data: { confirm: 'You sure?'}, class: 'btn btn-danger' %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the tasklits</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>